@inherits LayoutComponentBase


<div class="page">

    <main>
        <div class="header">
            <a href="/">
                <img class="logo" src="images/YogaLogo.png" />
            </a>
            <div class="spacer"></div>
            <a class="item" href="https://learn.microsoft.com/aspnet/core/">Abonnement</a>
            <a class="item" href="categories">Mediefiler</a>
            <select class="item" name="Profil" onchange="redirectToCategory(this)">
                <option >Profil</option>
                <option value="https://learn.microsoft.com/aspnet/core/">Yoga</option>
            </select>
            <button class="item" @onclick="onButtonClick">@buttonLable</button>
            <a class="item" href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script>
    function redirectToCategory(selectElement) {
        const selectedValue = selectElement.value;
        if (selectedValue) {
            window.location.href = selectedValue;
        }
    }
</script>
@code{
    private string buttonLable { get; set; } = "Login";

    private void onButtonClick()
    {
        if (buttonLable == "Login")
        {
            buttonLable = "Logout";
        }
        else
        {
            buttonLable = "Login";
        }
    }
}
