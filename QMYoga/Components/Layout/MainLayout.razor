@inherits LayoutComponentBase


<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <img src="images/YogaLogo.png" style="width: 64px; height: 58px; padding-right: 10px;" />
            <a href="https://learn.microsoft.com/aspnet/core/">Abonnement</a>
            <select name="Kategorier" onchange="redirectToCategory(this)">
                <option >Select Guide</option>
                <option value="https://learn.microsoft.com/aspnet/core/">Yoga</option>
                <option value="https://learn.microsoft.com/aspnet/core/">Meditation</option>
                <option value="https://learn.microsoft.com/aspnet/core/">Åndedræts</option>
            </select>
            <a>Profile</a>
            <button @onclick="onButtonClick" style="width: 100px; height: 50px;">@buttonLable</button>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script>
    function redirectToCategory(selectElement) {
        const selectedValue = selectElement.value;
        if (selectedValue) {
            window.location.href = selectedValue;
        }
    }
</script>
@code{
    private string buttonLable { get; set; } = "Login";

    private void onButtonClick()
    {
        if (buttonLable == "Login")
        {
            buttonLable = "Logout";
        }
        else
        {
            buttonLable = "Login";
        }
    }
}
