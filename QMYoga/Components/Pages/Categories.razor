@page "/categories"

<SearchBar/>
<div class="category-container">
    @foreach (var cat in _Categories)
    {
        <div class="category">
            <span class="category-title">@cat.Title</span>
            <div class="subcategory-nav">
                <button class="prev" onclick="prev(this)">ðŸ ˆ</button>
                <div class="subcategory-container">
                    <ul class="subcategory-list">
                        @foreach (var sub in cat.SubCategories)
                        {
                            <a class="subcategory-link" href="@sub.Url">
                                <div class="subcategory">
                                    <span class="subcategory-title">@sub.Title</span>
                                    <img class="subcategory-image" src="@sub.ImagePath" />
                                </div>
                            </a>
                        }
                    </ul>
                </div>
                <button class="next" onclick="next(this)">ðŸ Š</button>
            </div>
        </div>
    }
</div>
