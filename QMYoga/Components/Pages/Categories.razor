@page "/categories"
@rendermode InteractiveServer

<SearchBar/>
<button @onclick="OpenModal">Tilf√∏j ny Kategori</button>
<div class="category-container">
    @foreach (var cat in _Categories)
    {
        <div class="category">
            <span class="category-title">@cat.Title</span>
            <div class="subcategory-nav">
                <!--<button class="prev" onclick="prev(this)">ü†à</button>-->
                <div class="subcategory-container">
                    <div class="subcategory-list">
                        @foreach (var sub in cat.SubCategories)
                        {
                            <div class="subcategory-item">
                                <!--Replace the onclick event for a diffrent window of Modal to show the info of the chosen sub-->
                                <button class="test-button" @onclick="OpenModal">this is a test button</button> 
                                <a class="subcategory-link" href="Playlist?subcategory=@sub.Id">
                                    <div class="subcategory">
                                        <span class="subcategory-title">@sub.Title</span>
                                        <img class="subcategory-image" src="@sub.ImagePath" />
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <!--<button class="next" onclick="next(this)">ü†ä</button>-->
            </div>
        </div>
    }
</div>

<!-- Modal HTML -->
@if (IsModalOpen)
{
    <div tabindex="-1" style="display: block;" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Tilf√∏j Kategori</h5>
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
                </div>
                <div class="modal-body"> 
                    <input />
                    <br />
                    <select style="margin-top:20px;">
                        <option>V√¶lg en kategori</option>
                    </select>
                    <br />
                    <input style="margin-right:" />
                    <button style="margin-right:10px;">Tilf√∏j Billede</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal" style="margin-left:auto; margin-right:auto;">Gem</button>
                </div>
            </div>
        </div>
    </div>
}



@code {
    private bool IsModalOpen = false; 

    private void OpenModal()
    {
        IsModalOpen = true;
    }

    private void CloseModal()
    {
        IsModalOpen = false;
    }
}

